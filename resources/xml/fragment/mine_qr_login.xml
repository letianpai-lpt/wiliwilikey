<brls:Box
        wireframe="false"
        width="auto"
        grow="1.0"
        axis="column"
        alignItems="center">

    <brls:Label
            marginTop="30"
            text="@i18n/wiliwili/mine/login/scan"/>

    <QRImage
            id="mine/qr"
            margin="30"
            width="200"
            height="200"
            QRColor="@theme/font/grey"
            focusable="true"
            QRContent=""/>

    <brls:Label
            id="mine/hint"
            fontSize="16"
            textColor="@theme/font/grey"
            marginBottom="10"
            text="@i18n/wiliwili/mine/login/loading"/>

    <brls:Label
            fontSize="16"
            textColor="@theme/font/grey"
            marginBottom="20"
            text="@i18n/wiliwili/mine/login/hint"/>

    <brls:Image
            positionType="absolute"
            positionBottom="0"
            positionLeft="0"
            height="100"
            image="@res/pictures/22_open.png"/>

    <brls:Image
            positionType="absolute"
            positionBottom="0"
            positionRight="0"
            height="100"
            image="@res/pictures/33_open.png"/>
</brls:Box>